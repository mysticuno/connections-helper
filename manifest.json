{
  "manifest_version": 3,
  "name": "NYT Connections Helper",
  "version": "1.0",
  "description": "Mark potential categories in NYT Connections tiles.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/games/connections*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}